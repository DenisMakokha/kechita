# ===========================================
# Kechita Staff Portal - Production Environment
# ===========================================

# Database
DB_HOST=your-db-host.com
DB_PORT=5432
DB_USERNAME=kechita_user
DB_PASSWORD=strong-password-here
DB_DATABASE=kechita_portal
DB_SYNCHRONIZE=false

# App
PORT=3000
NODE_ENV=production

# Auth (REQUIRED - minimum 32 characters)
JWT_SECRET=generate-a-strong-random-secret-min-32-chars

# CORS
FRONTEND_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@kechita.com
SMTP_FROM_NAME=Kechita Capital

# SMS (Africa's Talking)
SMS_ENABLED=false
AT_USERNAME=your-at-username
AT_API_KEY=your-at-api-key
AT_FROM=KECHITA
AT_SMS_ENDPOINT=https://api.africastalking.com/version1/messaging
